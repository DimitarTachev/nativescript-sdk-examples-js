<GridLayout rows="auto *" columns="">
	<Button row="0" visibility="{{ tsclinks ? 'visible' : 'collapsed' }}" 
			text="{{ showTypeScriptExamples ? 'Show JavaScript Examples' : 'Show TypeScript Examples' }}" 
			tap="{{ onButtonTap }}">
	</Button>
	
	<ListView row="1" visibility="{{ showTypeScriptExamples ? 'collapsed' : 'visible' }}" items="{{ links }}" itemTap="{{ onItemTap }}">
		<ListView.itemTemplate>
			<StackLayout>
				<Label text="{{ title }}"></Label>
			</StackLayout>
		</ListView.itemTemplate>
	</ListView>
	<ListView row="1" visibility="{{ !showTypeScriptExamples ? 'collapsed' : 'visible' }}" items="{{ tsclinks }}" itemTap="{{ onSecondItemTap }}">
		<ListView.itemTemplate>
			<StackLayout>
				<Label text="{{ title + ' - TypeScript' }}"></Label>
			</StackLayout>
		</ListView.itemTemplate>
	</ListView>
</GridLayout>

