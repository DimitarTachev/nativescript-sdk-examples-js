<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Create"/>
	</Page.actionBar>

    <ScrollView>
        <GridLayout rows="auto auto auto auto *" class="m-20">
            <StackLayout row="0">
                <Label text="Folder Name" textWrap="true"/>
                <TextField hint="Enter Folder Name" text="{{ folderName }}" editable="true"/>
            </StackLayout>
            <StackLayout row="1">
                <Label text="File Name" textWrap="true"/>
                <TextField hint="Enter File Name" text="{{ fileName }}" editable="true"/>
            </StackLayout>
            <StackLayout row="2">
                <Label text="Text Content" textWrap="true"/>
                <TextField hint="Enter Text Content" text="{{ fileTextContent }}" editable="true"/>
            </StackLayout>
            <Button row="3" text="Create" tap="onCreateFile"/>
            <GridLayout row="4" rows="*, *" columns="*" visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}">
                <Label row="0" text="{{ successMessage }}" textWrap="true"/>
                <Label row="1" text="{{ 'File content: ' + writtenContent }}" textWrap="true"/>
            </GridLayout>
        </GridLayout>
    </ScrollView>

</Page>