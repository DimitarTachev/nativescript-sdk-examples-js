<!-- >> modal-view-xml -->
<Page xmlns="http://www.nativescript.org/tns.xsd" shownModally="onShownModally">
    <GridLayout rows="auto auto auto" columns="* 2*" class="m-20">
        <Label row="0" col="0" text="Username:" textWrap="true"></Label>
        <TextField row="0" col="1" hint="Username" text="{{ username }}"></TextField>

        <Label row="1" col="0" text="Password:" textWrap="true"></Label>
        <TextField row="1" col="1" hint="Password" secure="true" text="{{ password }}"></TextField>

        <Button row="2" colSpan="2" text="Sign In" tap="onLoginButtonTap"></Button>
    </GridLayout>
</Page>
<!-- << modal-view-xml -->