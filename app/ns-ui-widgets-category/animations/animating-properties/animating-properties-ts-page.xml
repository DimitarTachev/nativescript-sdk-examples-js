<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
	<Page.actionBar>
		<ActionBar title="Animating Multiple Properties" />
	</Page.actionBar>
	<GridLayout rows="auto, auto, *">
		<Label row="0" text="Tap the button for inital animation and long press the label for the secondary animation" textWrap="true" class="info"></Label>
        <Button row="1" text="Animate" tap="animate"></Button>
		<Label row="2" id="lbl" text="NativeScript" textWrap="true" longPress="animateTarget" class="info" width="200" height="100"></Label>
	</GridLayout>
</Page>
