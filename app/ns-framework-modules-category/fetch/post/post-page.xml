<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Post"/>
	</Page.actionBar>
    <StackLayout>
        <StackLayout class="m-20">
            <Label text="Username" textWrap="true"></Label>
            <TextField hint="Enter Username" text="{{ user }}" editable="true"></TextField>
        </StackLayout>

        <StackLayout class="m-20">
            <Label text="Password" textWrap="true"></Label>
            <TextField hint="Enter Password" text="{{ pass }}" secure="true" editable="true"></TextField>
        </StackLayout>

        <Button text="Submit" tap="makePostRequest"></Button>
        <GridLayout rows="auto, auto" columns="*" borderRadius="2" class="info">
            <Label row="0" colSpan="2" text="Data successfully send by user: " visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}"
                verticalAligment="middle" textWrap="true" textAlignment="center"></Label>
            <Label row="1" colSpan="2" text="{{ message }}" verticalAligment="middle" textWrap="true" textAlignment="center"></Label>
        </GridLayout>
    </StackLayout>
</Page>