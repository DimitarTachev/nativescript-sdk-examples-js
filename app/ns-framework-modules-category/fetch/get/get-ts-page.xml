<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Get"/>
	</Page.actionBar>

    <ScrollView>
        <GridLayout rows="50, auto, 50, auto, auto, auto, auto, 50, auto, 50, auto, auto, auto, 50, auto" columns="*, 2*">
            <Button row="0" col="0" colSpan="2" text="{{ getStringResultButton }}" id="getString" tap="onButtonTap"></Button>
            <Label row="1" col="0" colSpan="2" text="{{ getStringResult }}" textWrap="true" visibility="{{ getStringResultVisible ? 'visible' : 'collapsed' }}"></Label>
            
            <Button row="2" col="0" colSpan="2" text="{{ getJSONResultButton }}" class="btn btn-outline btn-active" id="getJSON" tap="onButtonTap"></Button>
            <Label row="3" col="0" text="Host" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="4" col="0" text="User-Agent" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="5" col="0" text="Origin" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="6" col="0" text="Url" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>

            <Label row="3" col="1" text="{{ host }}" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="4" col="1" text="{{ userAgent }}" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="5" col="1" text="{{ origin }}" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="6" col="1" text="{{ url }}" textWrap="true" visibility="{{ getJSONResultVisible ? 'visible' : 'collapsed' }}"></Label>
            
            <Button row="7" col="0" colSpan="2" text="{{ statusCodeResultButton }}" class="btn btn-outline btn-active" id="statusCode" tap="onButtonTap"></Button>
            <Label row="8" col="0" colSpan="2" text="{{ 'The returned response status code is: ' + statusCodeResult }}" textWrap="true" visibility="{{ statusCodeResultVisible ? 'visible' : 'collapsed' }}"></Label>
            
            <Button row="9" col="0" colSpan="2"   text="{{ responseHeadersResultButton }}" class="btn btn-outline btn-active" id="responseHeaders" tap="onButtonTap"></Button>
            <Label row="10" col="0" text="Accept-Encoding" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="11" col="0" text="User-Agent" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="12" col="0" text="Host" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            
            <Label row="10" col="1" text="{{ acceptEncoding }}" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="11" col="1" text="{{ userAgent }}" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            <Label row="12" col="1" text="{{ host }}" textWrap="true" visibility="{{ responseHeadersResultVisible ? 'visible' : 'collapsed' }}"></Label>
            
            <Button row="13" col="0" colSpan="2" text="{{ responseFormDataResultButton }}" class="btn btn-outline btn-active" id="responseFormData" tap="onButtonTap"></Button>
            <Label row="14" col="0" colSpan="2" text="{{ responseFormDataResult }}" textWrap="true" visibility="{{ responseFormDataResultVisible ? 'visible' : 'collapsed' }}"></Label>
        </GridLayout>
    </ScrollView>

</Page>