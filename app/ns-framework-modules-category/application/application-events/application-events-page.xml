<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" navigatedTo="onNavigatedTo">
    <Page.actionBar>
		<ActionBar title="" icon=""/>
	</Page.actionBar>
	<GridLayout rows="*, auto,  auto, auto, auto, *" columns="*" loaded="onGridLoaded" unloaded="onGridUnloaded" class="m-20" >
		<Label row="0" text="{{ 'Using orientationChanged event \nCurrent orientation: ' + orientation }}" textWrap="true"></Label>
		<Label row="1" text="{{ orientation === 'portrait' ? '&#xf10b; Portrait' : '&#xf03e; Landscape' }}" fontSize="24" textWrap="true" class="fas"></Label>
		<Label row="2" text="{{ displayedEvent }}" textWrap="true" class="fas"></Label>
		<Label row="3" text="{{ suspendEvent }}" textWrap="true" class="fas"></Label>
		<Label row="4" text="{{ resumeEvent }}" textWrap="true" class="fas"></Label>
		<Label row="5" text="{{ info }}" textWrap="true"></Label>
	</GridLayout>
</Page>
