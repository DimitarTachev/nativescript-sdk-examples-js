<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
	<Page.actionBar>
		<ActionBar title="Properties orignX and originY" />
	</Page.actionBar>
    <ScrollView>
        <GridLayout rows="auto, *, *, *, *" columns="*, *" backgroundColor="white">
            <Button row="0" col="0" colSpan="2" text="Tap to Animate with originX & originY" tap="animate"></Button>
            <GridLayout row="1" col="0" colSpan="2" id="myFirstView" automationText="myFirstView" width="400" height="30">
                <Label text="Default originX / originY (0.5)" horizontalAlignment="center"></Label>
            </GridLayout>
            <GridLayout row="2" col="0" colSpan="2" id="mySecondView" automationText="mySecondView" width="400" height="30">
                <Label text="originX = 1"  horizontalAlignment="right"></Label>
            </GridLayout>
            <GridLayout row="3" col="0" colSpan="2" id="myThirdView" automationText="myThirdView" width="400" height="30">
                <Label text="originX = 0"  horizontalAlignment="left"></Label>
            </GridLayout>
            <GridLayout row="4" col="0" id="myForthView" automationText="myForthView" width="90" height="300">
                <Label text="originY = 1" verticalAlignment="bottom"></Label>
            </GridLayout>
            <GridLayout row="4" col="1" id="myFifthView" automationText="myFifthView" width="90" height="300">
                <Label text="originY = 0" verticalAlignment="top"></Label>
            </GridLayout>
        </GridLayout>
    </ScrollView>
</Page>